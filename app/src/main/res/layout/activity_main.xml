<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0ffff"
    tools:context="com.example.rutgerscafe.MainActivity">

    <ImageButton
        android:id="@+id/donutImage"
        android:layout_width="277dp"
        android:layout_height="200dp"
        android:contentDescription="@string/content_desc_donut_image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        app:srcCompat="@drawable/donutimage" />

    <ImageButton
        android:id="@+id/coffeeImage"
        android:layout_width="277dp"
        android:layout_height="200dp"
        android:contentDescription="@string/content_decs_coffee_image"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/donutImage"
        app:layout_constraintTop_toTopOf="@id/donutImage"

        app:layout_constraintVertical_bias="0.50"
        app:srcCompat="@drawable/coffeeimage" />

    <ImageButton
        android:id="@+id/cartImage"
        android:layout_width="123dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coffeeImage"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/cartimage" />

    <ImageButton
        android:id="@+id/storeOrderImage"
        android:layout_width="123dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coffeeImage"
        app:layout_constraintVertical_bias="0.249"
        app:srcCompat="@drawable/storeorderimage" />

</androidx.constraintlayout.widget.ConstraintLayout>